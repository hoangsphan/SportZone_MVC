@model SportZone_MVC.DTOs.LoginDTO
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <section>
            <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="UEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="Tên đăng nhập" />
                    <label asp-for="UEmail" class="form-label"></label>
                    <span asp-validation-for="UEmail" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="UPassword" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu" />
                    <label asp-for="UPassword" class="form-label"></label>
                    <span asp-validation-for="UPassword" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Đăng nhập</button>
                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}